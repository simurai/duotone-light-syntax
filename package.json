{
  "name": "duotone-light-syntax",
  "theme": "syntax",
  "version": "1.0.0",
  "description": "A light DuoTone syntax theme",
  "keywords": [
    "light",
    "copper",
    "blue",
    "duotone",
    "syntax"
  ],
  "repository": "https://github.com/simurai/duotone-light-syntax",
  "license": "MIT",
  "main": "lib/duotone",
  "engines": {
    "atom": ">1.9.0"
  },
  "dependencies": {
    "duotone-syntax": "2.0.0",
    "chroma-js": "1.1.1"
  },
  "configSchema": {
    "preset": {
      "title": "Color palette",
      "description": "Choose one of the presets.",
      "order": 1,
      "type": [
        "string"
      ],
      "enum": ["Light I", "Light II", "Light III", "Custom"],
      "default": "Light I"
    },
    "unoColor": {
      "title": "Uno",
      "description": "Customize the main color",
      "order": 2,
      "type": "color",
      "default": "#919191"
    },
    "duoColor": {
      "title": "Duo",
      "description": "Customize the accent color",
      "order": 3,
      "type": "color",
      "default": "#FA6365"
    }
  }
}
