{
  "name": "duotone-light-syntax",
  "theme": "syntax",
  "version": "2.0.1",
  "description": "A light DuoTone syntax theme",
  "keywords": [
    "light",
    "copper",
    "blue",
    "duotone",
    "syntax"
  ],
  "repository": "https://github.com/simurai/duotone-light-syntax",
  "license": "MIT",
  "main": "lib/duotone",
  "engines": {
    "atom": ">1.9.0"
  },
  "dependencies": {
    "duotone-syntax": "^2.0.0",
    "chroma-js": "1.1.1"
  },
  "configSchema": {
    "color": {
      "title": "Custom Colors",
      "type": "object",
      "properties": {
        "uno": {
          "title": "Uno",
          "description": "Customize the main color",
          "order": 1,
          "type": "color",
          "default": "#A77E55"
        },
        "duo": {
          "title": "Duo",
          "description": "Customize the accent color",
          "order": 2,
          "type": "color",
          "default": "#6C3AEB"
        }
      }
    }
  }
}
